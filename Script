local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "TWVZ_UI"
screenGui.ResetOnSpawn = false

-- UIHolder
local mainFrame = Instance.new("Frame")
mainFrame.Parent = screenGui
mainFrame.Name = "MainUI"
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BorderSizePixel = 0
mainFrame.Position = UDim2.new(0.1, 0, 0.05, 0)
mainFrame.Size = UDim2.new(0, 750, 0, 500)
mainFrame.BackgroundTransparency = 0.2

-- UICorner
local corner = Instance.new("UICorner", mainFrame)
corner.CornerRadius = UDim.new(0, 12)

-- Sidebar
local sidebar = Instance.new("Frame", mainFrame)
sidebar.Name = "Sidebar"
sidebar.Size = UDim2.new(0, 170, 1, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
sidebar.BackgroundTransparency = 0.1

Instance.new("UICorner", sidebar).CornerRadius = UDim.new(0, 10)

-- Tab Button Template
local function createTabButton(name, order)
	local btn = Instance.new("TextButton")
	btn.Name = name
	btn.Text = name
	btn.Parent = sidebar
	btn.Position = UDim2.new(0, 10, 0, (order - 1) * 40 + 10)
	btn.Size = UDim2.new(1, -20, 0, 30)
	btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.AutoButtonColor = true
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
	return btn
end

-- Content Holder (right panel)
local contentFrame = Instance.new("Frame", mainFrame)
contentFrame.Name = "Content"
contentFrame.Position = UDim2.new(0, 180, 0, 10)
contentFrame.Size = UDim2.new(1, -190, 1, -20)
contentFrame.BackgroundTransparency = 1

-- Tab Pages Table
local tabs = {}

local function createTabPage(name, contentText)
	local page = Instance.new("Frame", contentFrame)
	page.Name = name
	page.Visible = false
	page.Size = UDim2.new(1, 0, 1, 0)
	page.BackgroundTransparency = 1

	local label = Instance.new("TextLabel", page)
	label.Text = contentText
	label.Size = UDim2.new(1, -20, 0, 30)
	label.Position = UDim2.new(0, 10, 0, 10)
	label.TextColor3 = Color3.fromRGB(255, 255, 255)
	label.BackgroundTransparency = 1
	label.Font = Enum.Font.GothamBold
	label.TextSize = 20

	tabs[name] = page
end

-- Create buttons + pages
local tabNames = {"Infos", "Main", "Dungeon"}
for i, name in ipairs(tabNames) do
	local button = createTabButton(name, i)
	createTabPage(name, "Welcome to " .. name .. " tab!")

	button.MouseButton1Click:Connect(function()
		for _, page in pairs(tabs) do
			page.Visible = false
		end
		tabs[name].Visible = true
	end)
end

-- Set default tab visible
tabs["Infos"].Visible = true
