-- TWVZ-style Menu UI (Arise Crossover)
-- Custom built GUI, draggable, with hide/show toggle

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()
local UIS = game:GetService("UserInputService")

-- Create Toggle Button
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(0, 80, 0, 30)
toggleBtn.Position = UDim2.new(0, 10, 0, 100)
toggleBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleBtn.Text = "Menu"
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.BorderSizePixel = 0
toggleBtn.Parent = game.CoreGui

-- Main UI Frame
local mainUI = Instance.new("Frame")
mainUI.Size = UDim2.new(0, 500, 0, 400)
mainUI.Position = UDim2.new(0.5, -250, 0.5, -200)
mainUI.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainUI.BorderSizePixel = 0
mainUI.Active = true
mainUI.Draggable = true
mainUI.Visible = true
mainUI.Parent = game.CoreGui

-- Top Bar
local topBar = Instance.new("Frame")
topBar.Size = UDim2.new(1, 0, 0, 35)
topBar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
topBar.BorderSizePixel = 0
topBar.Parent = mainUI

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -10, 1, 0)
title.Position = UDim2.new(0, 10, 0, 0)
title.Text = "Arise Crossover | TWVZ-style"
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = topBar

-- Sidebar
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0, 130, 1, -35)
sidebar.Position = UDim2.new(0, 0, 0, 35)
sidebar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
sidebar.BorderSizePixel = 0
sidebar.Parent = mainUI

-- Tabs List
local tabNames = {
    "Infos", "Main", "Dungeon", "Castle", "Rank",
    "Raid", "Teleport", "Sell", "Mount", "Shop",
    "Exchange", "Upgrader", "Boosts", "Experimental", "Webhook", "Settings"
}

local function createTab(name)
    local tab = Instance.new("TextButton")
    tab.Size = UDim2.new(1, 0, 0, 30)
    tab.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    tab.BorderSizePixel = 0
    tab.Text = name
    tab.TextColor3 = Color3.new(1, 1, 1)
    tab.Font = Enum.Font.Gotham
    tab.TextSize = 14
    tab.Parent = sidebar
    return tab
end

for _, name in ipairs(tabNames) do
    createTab(name)
end

-- Main content area (right of sidebar)
local content = Instance.new("Frame")
content.Size = UDim2.new(1, -130, 1, -35)
content.Position = UDim2.new(0, 130, 0, 35)
content.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
content.BorderSizePixel = 0
content.Parent = mainUI

-- Toggle button logic
toggleBtn.MouseButton1Click:Connect(function()
    mainUI.Visible = not mainUI.Visible
end)

-- Optional: make sure UI opens on top
mainUI.ZIndex = 5
topBar.ZIndex = 6
sidebar.ZIndex = 5
content.ZIndex = 5
